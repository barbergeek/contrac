<tr class="<%= cycle("odd","even") %>" id="opportunity-<%= opportunity.id %>">
	<td><%= link_to 'Destroy', opportunity, :confirm => 'Are you sure?', 
			:method => :delete, :class => "ui-icon ui-icon-trash", :title => "Destroy" %><br/>
			<% c = opportunity.watched_by?(current_user) ? "ui-state-error" : "" %>
			<div id="watch-opportunity-div-<%= opportunity.id %>" class="ui-corner-all <%= c %>">
			<%= link_to 'Watch', watch_opportunity_path(opportunity), 
			:method => :post, :remote => true, :class => "ui-icon ui-icon-heart", :id => "watch-opportunity-#{opportunity.id}"%>
			</div>
			<%= content_tag("span", "", :class => "ui-state-highlight ui-corner-all ui-icon ui-icon-alert") if opportunity.updated_at > 7.days.ago %></td>
	<td><%= opportunity.acronym %></td>
	<td><%= link_to opportunity.program, edit_opportunity_path(opportunity) %><br/>
	<i><%= opportunity.department %><%= '/'+opportunity.agency unless opportunity.agency.blank?%></i></td>
	<td><%= opportunity.description %></td>
	<td><%= link_to_input opportunity.input_record_id, :target => "_blank" %></td>
	<td><%= opportunity.input_status %></td>
	<td><%= opportunity.total_value %></td>
	<td><%= opportunity.rfp_release_date %></td>
	<td><%= opportunity.capture_phase %></td>
	<td><%= opportunity.business_developer.initials unless opportunity.business_developer.nil? %></td>
</tr>