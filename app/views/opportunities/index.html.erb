<div id="opportunity-filter" class="accordion-collapsible span-24 last">
	<h3><a href="#">Filters</a></h3>
	<div>Department | Agency | INPUT Status | RFP Date | Capture Phase | Business Developer</div>
</div>
<%= will_paginate @opportunities, :class =>"span-24 last" %>
<table class="opportunities">
  <tr>
	<th class='icons'></th>
    <th><%= sortable "acronym" %></th>
    <th><%= sortable "program", "Program Name" %><br/>
    	<%= sortable "department" %>/<%= sortable "agency" %></th>
    <th>Description</th>
	<th><%= sortable "input_record_id", "INPUT" %></th>
	<th><%= sortable "input_status", "INPUT Status" %></th>
	<th><%= sortable "total_value", "Value" %></th>
	<th><%= sortable "rfp_release_date", "RFP Release" %></th>
	<th><%= sortable "capture_phase", "Phase" %></th>
	<th><%= sortable "users.initials", "BD" %></th>
  </tr>

  <%= render @opportunities %>

</table>
<%= will_paginate @opportunities %>
<br />

<%= link_to 'New Opportunity', new_opportunity_path %>
