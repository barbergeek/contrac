<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Notes</th>
    <th>Owner</th>
    <th>Status</th>
    <th>Due at</th>
    <th>Closed at</th>
    <th>Assigned by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.notes %></td>
    <td><%= task.owner %></td>
    <td><%= task.status %></td>
    <td><%= task.due_at %></td>
    <td><%= task.closed_at %></td>
    <td><%= task.assigned_by %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

